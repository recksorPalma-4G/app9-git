<?xml version="1.0" encoding="utf-8"?>

<widget xmins ="http://www.w3.org/ns/widgets"
xmlns:gap="http://phonegap.com/ns/1.0"
id = "com.phonegap.app8"
version ="1.0.0">

<name>app9 Reproductor de musica</name>

<description>
Utiliza plugins de audios para reproducir archivos mp3
</description>

<author href="https://build.phonegap.com" email="raidersoutlas@gmail.com">
Carlos Palma Coyotl
</author>

<!--perzonaliza la aplicacion y plataforma-->
<preference name="orientation" value="portrait"/>
<preference name="target-device" value="universal"/>
<preference name="fullscreen" value="true"/>
<preference name="android-installLocation" value="auto"/>
<preference name="permissions" value="INTERNET"/>

<!--Plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!--Plugin Audio-->

<plugin name="cordova-plugin-media" spec="https://github.com/apache/cordova-plugin-media.git"/>

<!--Colocar icono app-->

<icon src="res/android/mdpi.png"/>

</widget>